{
  "name": "@askuzminov/actions-test-core",
  "version": "1.0.0",
  "description": "",
  "author": {
    "name": "Kuzminov Alexander",
    "url": "https://github.com/askuzminov"
  },
  "contributors": [
    {
      "name": "Kuzminov Alexander",
      "url": "https://github.com/askuzminov",
      "email": "askuzminov@gmail.com"
    }
  ],
  "license": "MIT",
  "scripts": {
    "build": "lerna run build",
    "lerna:bootstrap": "lerna bootstrap --force-local --ignore-prepublish && npm run build",
    "lerna:bootstrap:ci": "lerna bootstrap --ci --force-local --ignore-prepublish && npm run build",
    "lerna:reinstall": "npm run lerna:clean && npm run lerna:bootstrap",
    "lerna:clean": "npm run build:clean && lerna clean --yes",
    "lerna:publish": "lerna publish --create-release github",
    "lerna:canary": "lerna publish --canary --amend --allow-branch feature/*",
    "postinstall": "if test \"$CI\" = \"true\" ; then npm run lerna:bootstrap:ci ; else npm run lerna:bootstrap ; fi"
  },
  "devDependencies": {
    "@commitlint/cli": "9.0.1",
    "@commitlint/config-conventional": "9.0.1",
    "husky": "4.3.0",
    "lerna": "3.22.1",
    "typescript": "4.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
